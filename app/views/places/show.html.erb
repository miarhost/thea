
	<div class="newslettercontent">
		     <div class="leftside">
<%= image_tag(@place.image.url, version: :medium) if @place.image? %>
                <h1><%= @place.name %></h1>
			    
		     </div>
             <div class="rightside">
             <p class="glyphicon glyphicon-heart"> Likes: <%= @place.likes.count %></p>
